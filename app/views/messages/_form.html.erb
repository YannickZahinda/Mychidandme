<%= form_with(model: message) do |form| %>
  <% if message.errors.any? %>
    <div class="message-errors">
      <h2><%= pluralize(message.errors.count, "error") %> prohibited this message from being sent:</h2>
      <ul>
        <% message.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="contact-us" style="width: 36%; margin: auto; text-align: center;">
    <h1 style="color: #459A7D;">Contact Us</h1>

    <%= form.label :name, 'Full Name:', class: 'form-label' %>
    <%= form.text_field :name, required: true, class: 'form-input' %>

    <%= form.label :contact, 'Email:', class: 'form-label' %>
    <%= form.email_field :contact, required: true, class: 'form-input' %>

    <%= form.label :body, 'Message:', class: 'form-label' %>
    <%= form.text_area :body, rows: 5, required: true, class: 'form-textarea' %>

    <%= form.submit 'Send Message', class: 'btn btn-primary' %>
  </div>
<% end %>
