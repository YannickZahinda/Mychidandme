<p style="color: green"><%= notice %></p>

<h1>Blogs</h1>

<div id="blogs">
  <% @blogs.each do |blog| %>
  <div style="boder: 1px solid black; padding: 10px; border-radius: 10px; margin: 30px">
    <h1><%= blog.title %></h1>
    <p><%= blog.body %></p>
    <p>
      <%= link_to "Show this blog", blog %>
    </p>
  </div>
  <% end %>
</div>


