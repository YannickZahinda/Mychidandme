<%= form_with(model: [:admin, @testimony], url: admin_testimonies_path,local: true) do |form| %>
  <% if testimony.errors.any? %>
    <div class="errors">
      <h2><%= pluralize(testimony.errors.count, "error") %> testimony couldn't be saved:</h2>
      <ul>
        <% testimony.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="input-field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="input-field">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <div class="input-field">
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>

  <div class="form-actions">
    <%= form.submit %>
  </div>
<% end %>
